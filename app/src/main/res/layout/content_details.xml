<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.NestedScrollView
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    app:layout_behavior="@string/appbar_scrolling_view_behavior"
    tools:context=".PosterDetailActivity"
    tools:showIn="@layout/activity_poster_detail">

    <RelativeLayout
        android:padding="@dimen/details_padding"
        android:layout_width="match_parent"
        android:layout_height="match_parent">

        <ImageView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/details_image"/>

        <TextView
            android:paddingTop="@dimen/details_padding"
            android:padding="@dimen/details_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Release date"
            android:layout_toRightOf="@+id/details_image"
            android:id="@+id/details_release"/>

        <TextView
            android:padding="@dimen/details_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Rating"
            android:layout_toRightOf="@+id/details_image"
            android:layout_below="@+id/details_release"
            android:id="@+id/details_rating"/>

        <ImageButton
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_toRightOf="@+id/details_image"
            android:layout_below="@+id/details_rating"
            android:id="@+id/star_btn"
            android:src="@android:drawable/btn_star_big_off"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/star_btn"
            android:layout_toRightOf="@+id/details_image"
            android:id="@+id/review_btn"
            android:text="Read Reviews"/>

        <Button
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_below="@+id/star_btn"
            android:layout_toRightOf="@+id/review_btn"
            android:id="@+id/trailer_btn"
            android:text="Watch Trailer"/>

        <TextView
            android:paddingTop="@dimen/details_padding"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Muuuuuuuuuvaaaaayyy"
            android:layout_below="@+id/details_image"
            android:id="@+id/details_overview"/>

    </RelativeLayout>

</android.support.v4.widget.NestedScrollView>
